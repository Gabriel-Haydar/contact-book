<%- include('includes/header'); %>

<%- include('includes/navbar'); %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Sign up new account or Login</h1>
      <p class="text-center lead">Create new account or login filling one of the two forms bellow:</p>
      
      <%- include('includes/messages'); %> 
      
      <div class="row">

        <div class="col-lg my-5">
          <h4>New account</h4>
          <p>If you don't have an account yet, sign up new one filling the form below:</p>
          <form action="/user/register" method="POST" class="signup">
            <input type="hidden" name="_csrf" value="<%= csrfToken%>">
            <div class="mb-3">
              <label class="form-label">Email address</label>
              <input type="email" class="form-control email" name="email" aria-describedby="emailHelp" required>
              <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
            </div>
            <div class="mb-3">
              <label class="form-label">Password</label>
              <input type="password" class="form-control password" name="password" required>
            </div>
            <button type="submit" class="btn btn-primary">Sign up</button>
          </form>

        </div>

        <div class="col-lg my-5">
          <h4>Login</h4>
          <p>If you already have an account, login below:</p>
          <form action="/user/login" method="POST" class="login">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="mb-3">
              <label class="form-label">Email address</label>
              <input type="email" class="form-control email" name="email" required>
            </div>
            <div class="mb-3">
              <label class="form-label">Password</label>
              <input type="password" class="form-control password" name="password" required>
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
          </form>

        </div>
      </div>
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>